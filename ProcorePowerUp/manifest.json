{
  "manifest_version": 3,
  "name": "Procore Power-Up Sidebar",
  "version": "1.7",
  "description": "Global drawing tree using network interception.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_title": "Open Procore Power-Up",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.procore.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.procore.com/*"],
      "js": ["injected.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.procore.com/*"],
      "js": ["pp-store.js", "pp-ui.js", "pp-core.js"],
      "css": ["styles.css"],
      "world": "ISOLATED",
      "run_at": "document_start"
    }
  ]
}