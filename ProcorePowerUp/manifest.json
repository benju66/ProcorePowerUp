{
  "manifest_version": 3,
  "name": "Procore Power-Up Sidebar",
  "version": "1.4",
  "description": "Global drawing tree using network interception.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.procore.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://*.procore.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*.procore.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}