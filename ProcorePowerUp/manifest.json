{
  "manifest_version": 3,
  "name": "Procore Power-Up Sidebar",
  "version": "1.5",
  "description": "Global drawing tree using network interception.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.procore.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.procore.com/*"],
      "js": ["injected.js"],
      "world": "MAIN",
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.procore.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "world": "ISOLATED",
      "run_at": "document_start"
    }
  ]
}